<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/detail_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Bayrak -->
        <ImageView
            android:id="@+id/imgBayrak"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp"
            android:contentDescription="Bayrak" />

        <!-- Ülke adı -->
        <TextView
            android:id="@+id/tvAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ülke Adı"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="16dp" />

        <!-- Başkent -->
        <TextView
            android:id="@+id/tvBaskent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Başkent"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- Dil -->
        <TextView
            android:id="@+id/tvDil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dil"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- Yüzölçümü -->
        <TextView
            android:id="@+id/tvYuzolcumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yüzölçümü"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
